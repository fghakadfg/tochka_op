<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_place_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/place_icon"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_theatre_round" />

    <TextView
        android:id="@+id/name_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        android:text="Экскурсии с незрячим гидом “Осязаемый Петербург”"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/place_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Коллектив театра «Внутреннее зрение» был создан в 1967 году. Он создавался для инвалидов по зрению и средствами драматического искусства должен был помочь им в социальной реабилитации."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_icon" />

    <Button
        android:id="@+id/item_button"
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#d9d9d9"
        android:textColor="#000000"
        android:clickable="true"
        android:focusable="true"
        android:text="Записаться"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_place" />

</androidx.constraintlayout.widget.ConstraintLayout>
